---
import MainLayout from "../layouts/MainLayout.astro";
---

<link rel="stylesheet" href="/lib/glide.core.min.css" />

<MainLayout>
  <section class="h-screen">
    <div
      class="flex bg-black/50 h-1/2 w-1/2 rounded-lg mx-auto my-16 justify-center items-center font-inter text-white"
    >
      <div class="glide">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            <li class="flex glide__slide">
              <div class="flex m-10">
                <img class="mr-5" src="/placeholder.png" alt="" />

                <div class="block">
                  <div>
                    <h3 class="text-primary1 font-bold text-3xl">LucasoDev.Tk</h3>
                    <p>
                      Lorem ipsum dolor sit amet consectetur adipisicing elit.
                      Aspernatur magni necessitatibus sunt soluta consequatur
                      vitae ad libero. Commodi, blanditiis impedit.
                    </p>
                  </div>

                  <div class="mt-3">
                    <h4 class="font-bold text-xl">Technologies</h4>
                    <ul class="ml-5">
                      <li>HTML</li>
                      <li>CSS</li>
                      <li>Tailwindcss</li>
                      <li>Astro</li>
                    </ul>

                    <h4 class="font-bold text-xl mt-3">Tools</h4>
                    <ul class="ml-5">
                      <li>Figma</li>
                      <li>Visual Studio Code</li>
                      <li>GitHub Pages</li>
                      <li>Git Version control via GitHub</li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>

        <div class="glide__arrows text-center" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<"
            >prev</button
          >
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">"
            >next</button
          >
        </div>
      </div>
    </div>
  </section>

  <script is:inline src="/lib/glide.min.js"></script>

  <script>
    new Glide(".glide").mount();
  </script>
</MainLayout>
