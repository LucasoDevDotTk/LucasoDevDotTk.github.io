---
import MainLayout from "../layouts/MainLayout.astro";
import ButtonBorder from "../components/ButtonBorder.astro";

const title = "404 | Page Not Found";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <MainLayout>
      <section class="h-screen">
        <div class="py-8 px-4 mx-auto mt-60 max-w-screen-xl lg:py-16 lg:px-6">
          <div class="mx-auto max-w-screen-sm text-center">
            <h1
              class="text-white mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl dark:text-primary-500"
            >
             404
            </h1>
            <p
              class="mb-4 text-3xl tracking-tight font-bold text-cgrey md:text-4xl dark:text-white"
            >
              Something's missing.
            </p>
            <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">
              Sorry, we can't find that page. You'll find lots to explore on the
              home page.
            </p>
            <div class="my-10">
                <ButtonBorder text="Homepage" href="https://lucasodev.tk"></ButtonBorder>
            </div>
          </div>
        </div>
      </section>
  </MainLayout>
</html>
