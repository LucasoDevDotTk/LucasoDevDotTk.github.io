---
import MainLayout from "../layouts/MainLayout.astro";

import FillButtonPrimary from "../components/FillButtonPrimary.astro";
import FillButtonSecondary from "../components/FillButtonSecondary.astro";
import ButtonBorder from "../components/ButtonBorder.astro";
import Typewriter from "../components/Typewriter.astro";

const title = "LucasoDev's Website";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <MainLayout>
    <!-- Hero -->
    <section
      style="background-image: url('./transparent_cir.svg')"
      class="relative bg-no-repeat overflow-visible md:bg-right-top bg-contain"
    >
      <!-- Hero Content-Text -->
      <div class="md:container mx-auto">
        <h1
          class="font-rubik text-center text-white pt-20 text-7xl font-bold md:text-8xl md:text-left"
        >
          Hi, I'm LucasoDev
        </h1>
        <p
          class="text-white text-3xl text-center md:text-4xl md:text-left font-rubik pt-10"
        >
          I create
          <span
            class="font-consolas text-transparent font-bold bg-clip-text bg-gradient-to-r from-primary2 to-primary"
          >
            <Typewriter />
          </span>
        </p>

        <div class="mt-24">
          <ButtonBorder text="Read More" href="https://lucasodev.tk/404.html" />
        </div>
      </div>
      <!-- End Hero Content-Text -->

      <!-- Hero Content-Cards -->
      <div class="bg-black/40 mt-20">
        <div
          class="text-white md:container mx-auto md:flex text-center md:text-left py-14"
        >
          <!-- Card 1 -->
          <div
            class="md:mr-20 md:w-80 mx-14 md:mx-0 border-primary1 border-4 rounded-lg my-10 p-10"
          >
            <h3 class="font-bold text-2xl">Open source for everyone</h3>
            <p class="text-cgrey text-xl py-4">
              Absolutely all of my work is fully open source and is available on
              GitHub right now, for everyone.
            </p>
            <FillButtonPrimary
              text="GitHub"
              href="https://github.com/lucasodevdottk"
            />
          </div>
          <!-- End Card 1 -->
          <!-- Card 2 -->
          <div
            class="md:w-80 mx-14 md:mx-0 border-primary2 border-4 rounded-lg my-10 p-10"
          >
            <h3 class="font-bold text-2xl">
              Glorifying and fantastic websites
            </h3>
            <p class="text-cgrey text-xl py-4">
              I deliver next-level, modern and creative designs. Want a
              beautiful and modernistic website, no problem, contact me!
            </p>
            <FillButtonSecondary
              text="Services"
              href="https://lucasodev.tk/404"
            />
          </div>
          <!-- End Card 2 -->
        </div>
      </div>
      <!-- End Hero Content-Cards -->
    </section>
    <!-- End Hero -->
    <!-- About Me -->
    <section class="bg-black/40">
      <div class="pt-10 md:container md:mx-auto">
        <h2 class="text-4xl font-rubik text-white text-center md:text-left">
          About Me
        </h2>
        <div class="flex">
          <p class="text-cgrey mt-4">
            I'm a 13-year-old norwegian tech enthusiast. I love to tinker with
            computers and have always loved to do so. Knowing Python, HTML, and
            CSS, I consider myself a junior developer. I have made a more
            detailed tech stack further down this page. I have been programming
            for about 2.5 years. In addition to programming, I have also found
            that I love web-design, so I made this website!
          </p>
          <img
            class="hidden md:block"
            src="./computer-guy.svg"
            alt="Illustration of a guy thinking while sitting besides a laptop"
          />
        </div>
      </div>
    </section>
    <!-- End About Me -->
  </MainLayout>
</html>
