---
import MainLayout from "../layouts/MainLayout.astro";

const title = "LucasoDev's Website";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>

	<MainLayout>
		<!-- Hero -->
		<section>
			<div class="md:container mx-auto">
				<h1
					class="font-rubik text-center text-white pt-20 text-7xl font-bold md:text-8xl md:text-left"
				>
					Hi, I'm LucasoDev
				</h1>
				<p
					class="text-white text-3xl text-center md:text-4xl md:text-left font-rubik pt-10"
				>
					I create
					<span
						id="typewriter"
						class="font-consolas text-transparent font-bold bg-clip-text bg-gradient-to-r from-primary2 to-primary"
						>Test
					</span>
				</p>

				<!-- Contact Btn -->
				<div
					class="mt-20 justify-center block text-center md:text-left"
				>
					<a
						class="p-3 px-14 border-2 border-primary1 rounded-lg hover:border-primary2 text-white transition-all ease-in-out"
						href="#"
						>Contact -&gt
					</a>
				</div>
				<!-- End of Contact Btn -->
			</div>

			<!-- Hero (2) -->
			<div class="bg-black/40 mt-60">
				<div
					class="text-white md:container mx-auto md:flex text-center md:text-left py-14"
				>
					<div
						class="md:mr-20 md:w-80 mx-14 md:mx-0 border-primary1 border-4 rounded-lg my-10 p-10"
					>
						<h3 class="font-bold text-2xl">
							Open source for everyone
						</h3>
						<p class="text-cgrey text-xl py-4">
							Absolutely all of my work is fully open source and
							is available on GitHub right now, for everyone.
						</p>
						<div class="my-10">
							<a
								class="block text-center p-3 bg-primary1 rounded-md px-10 hover:bg-primary2 transition-all ease-in-out"
								href=""
								>GitHub -&gt
							</a>
						</div>
					</div>
					<div
						class="md:w-80 mx-14 md:mx-0 border-primary2 border-4 rounded-lg my-10 p-10"
					>
						<h3 class="font-bold text-2xl">
							Glorifying and fantastic websites
						</h3>
						<p class="text-cgrey text-xl py-4">
							Get assistance to build the most glorifying and
							fantastic websites out there, with creativity in
							mind. Everyone needs a website, and now is the
							perfect time!
						</p>
						<div class="my-10">
							<a
								class="block text-center p-3 bg-primary2 rounded-md px-10 hover:bg-primary1 transition-all ease-in-out"
								href=""
								>Services -&gt
							</a>
						</div>
					</div>
				</div>
			</div>
			<!-- End of Hero (2) -->
		</section>
		<!-- End of Hero -->
	</MainLayout>
</html>
